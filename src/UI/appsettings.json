{
  "Database":  "mongodb",
  "Connections": {
    "postgres": {
      "default": "Server=localhost;Port=5432;Database=ppo;User Id=postgres;Password=1234;",
      "guest": "Server=localhost;Port=5432;Database=ppo;User Id=guest;Password=guest;",
      "user": "Server=localhost;Port=5432;Database=ppo;User Id=_user;Password=user;",
      "admin": "Server=localhost;Port=5432;Database=ppo;User Id=admin;Password=admin;"
    },
    "mongodb": "mongodb://localhost:27017/"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./log.txt",
          "OutputTemplate": "{Timestamp:u} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  }
}